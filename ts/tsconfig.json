{
    "compilerOptions": {
        "watch": true,
        "resolveJsonModule": true,
        "paths": {
            "*": ["types/*"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./lib",
        "baseUrl": "./src",
        "declaration": true,
        "strict": true
    },
    "include": [
        "src/**/*",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules", 
        "**/spec/*"
    ]
}